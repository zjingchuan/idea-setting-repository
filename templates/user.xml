<templateSet group="user">
  <template name="logger" value="org.slf4j.LoggerFactory.getLogger($TAG$)" toReformat="true" toShortenFQNames="true">
    <variable name="TAG" expression="" defaultValue="&quot;getClass()&quot;" alwaysStopAt="true" />
    <context>
      <option name="JAVA_STATEMENT" value="true" />
      <option name="JAVA_EXPRESSION" value="true" />
    </context>
  </template>
</templateSet>